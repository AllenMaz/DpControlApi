@using System.Security.Claims

@if (User.IsSignedIn())
{
    <ul class="nav navbar-nav navbar-right">

        <li><a asp-controller="Home" asp-action="Index"> Hello @User.GetUserName()!</a></li>

    </ul>
    
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Login" target="_blank">Sign In</a></li>
    </ul>
}
